<h1>Dashboard Work!</h1>

{{#each posts as |uerPost| }}
{{> dashboard-post-list}}
{{/each}}


<div class="card text-center mt-5 d-none" id="create-post-div">
    <div class="card-header py-4">
        Create New Post
    </div>
    <div class="card-body">
        <form id="create-post-form">
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Title</label>
                <textarea class="form-control" id="post-title" rows="2"></textarea>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Content</label>
                <textarea class="form-control" id="post-content" rows="4"></textarea>
            </div>
            <div class="form-group mt-5">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Update</button>
            </div>
        </form>
    </div>
    {{!-- <div class="card-footer text-muted">
        2 days ago
    </div> --}}
</div>

<div class="text-center mt-5" id="create-new-post-btn">
    <button type="button" class="btn btn-primary btn-lg">Create New Post</button>
</div>

<script src="./js/dashboard.js"></script>