<div class="card text-center" id="create-post-div" data-postid="{{id}}">
    <div class="card-header py-4">
        Modify Your Post
    </div>
    <div class="card-body">
        <form id="create-post-form">
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Title</label>
                <textarea class="form-control" id="post-title" rows="2">{{title}}</textarea>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Content</label>
                <textarea class="form-control" id="post-content" rows="4">{{content}}</textarea>
            </div>
            <div class="form-group  mt-5">
                <button type="submit" class="btn btn-primary btn-lg btn-block" id="updateBtn">Update</button>
            </div>
            <div class="form-group  mt-4">
                <button type="submit" class="btn btn-danger btn-lg btn-block" id="deleteBtn">Delete</button>
            </div>
        </form>
    </div>
</div>

